

    <body>
      

                <main class="add-classification">
                    <h1>
                        <%= title %>
                    </h1>

                    <!-- Flash messages -->
                    <% if (messages && (messages.notice || messages.error)) { %>
                        <div class="flash-message">
                            <% if (messages.notice) { %>
                                <p class="success">
                                    <%= messages.notice %>
                                </p>
                                <% } %>
                                    <% if (messages.error) { %>
                                        <p class="error">
                                            <%= messages.error %>
                                        </p>
                                        <% } %>
                        </div>
                        <% } %>

                            <!-- Validation errors -->
                            <% if (errors && errors.length> 0) { %>
                                <div class="validation-errors">
                                    <ul>
                                        <% errors.forEach(err=> { %>
                                            <li>
                                                <%= err.msg %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>
                                <% } %>

                                    <!-- Classification form -->
                                    <form action="/inv/add-classification" method="POST" class="classification-form">
                                        <label for="classification_name">Classification Name:</label>
                                        <input type="text" id="classification_name" name="classification_name"
                                            value="<%= classification_name || '' %>"
                                            placeholder="Enter classification name" required>
                                        <button type="submit">Add Classification</button>
                                    </form>

                                    <!-- Quick navigation links -->
                                    <section class="management-links">
                                        <h2>Quick Links</h2>
                                        <ul>
                                            <li><a href="/inv/add-classification">Add New Classification</a></li>
                                            <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
                                            <li><a href="/inv/new-car">New Car</a></li>
                                        </ul>
                                    </section>
                </main>

    </body>

</html>