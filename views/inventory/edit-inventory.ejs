

    <body>
        

                <main class="edit-inventory">
                    <h1>
                        <%= title %>
                    </h1>

                    <!-- ===============================
             Flash / Message Handling
        =============================== -->
                    <% if (messages && Object.keys(messages).length> 0) { %>
                        <div id="flash-messages">
                            <% Object.keys(messages).forEach(function(type) { %>
                                <% messages[type].forEach(function(message) { %>
                                    <div class="flash-item <%= type %>">
                                        <span>
                                            <%= message %>
                                        </span>
                                        <button class="close-btn" onclick="this.parentElement.remove()">Ã—</button>
                                    </div>
                                    <% }) %>
                                        <% }) %>
                        </div>
                        <% } %>

                            <!-- ===============================
             Validation Errors
        =============================== -->
                            <% if (errors && errors.length> 0) { %>
                                <div class="validation-errors">
                                    <ul>
                                        <% errors.forEach(err=> { %>
                                            <li>
                                                <%= err.msg %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>
                                <% } %>

                                    <!-- ===============================
             Edit Inventory Form
        =============================== -->
                                    <form action="/inv/update-inventory" method="POST" class="inventory-form">
                                        <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">

                                        <label for="classification_id">Classification:</label>
                                        <%- classificationSelect %>

                                            <label for="inv_make">Make:</label>
                                            <input type="text" id="inv_make" name="inv_make"
                                                value="<%= vehicle.inv_make || '' %>" required>

                                            <label for="inv_model">Model:</label>
                                            <input type="text" id="inv_model" name="inv_model"
                                                value="<%= vehicle.inv_model || '' %>" required>

                                            <label for="inv_year">Year:</label>
                                            <input type="number" id="inv_year" name="inv_year"
                                                value="<%= vehicle.inv_year || '' %>" required>

                                            <label for="inv_description">Description:</label>
                                            <textarea id="inv_description" name="inv_description"
                                                required><%= vehicle.inv_description || '' %></textarea>

                                            <label for="inv_image">Image Path:</label>
                                            <input type="text" id="inv_image" name="inv_image"
                                                value="<%= vehicle.inv_image || '' %>" required>

                                            <label for="inv_thumbnail">Thumbnail Path:</label>
                                            <input type="text" id="inv_thumbnail" name="inv_thumbnail"
                                                value="<%= vehicle.inv_thumbnail || '' %>" required>

                                            <label for="inv_price">Price:</label>
                                            <input type="number" id="inv_price" name="inv_price"
                                                value="<%= vehicle.inv_price || '' %>" required>

                                            <label for="inv_miles">Miles:</label>
                                            <input type="number" id="inv_miles" name="inv_miles"
                                                value="<%= vehicle.inv_miles || '' %>" required>

                                            <label for="inv_color">Color:</label>
                                            <input type="text" id="inv_color" name="inv_color"
                                                value="<%= vehicle.inv_color || '' %>" required>

                                            <button type="submit">Update Vehicle</button>
                                    </form>
                </main>

    </body>

</html>