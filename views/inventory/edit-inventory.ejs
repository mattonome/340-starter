

    <body>
        

                <main class="edit-inventory">
                    <h1>Edit Vehicle</h1>

                    <form action="/inv/edit" method="post" class="inventory-form">
                        <input type="hidden" name="inv_id" value="<%= itemData.inv_id %>">

                        <label for="classification_id">Classification:</label>
                        <select name="classification_id" id="classification_id" required>
                            <% classifications.forEach(classification=> { %>
                                <option value="<%= classification.classification_id %>"
                                    <%=classification.classification_id==itemData.classification_id ? "selected" : "" %>
                                    >
                                    <%= classification.classification_name %>
                                </option>
                                <% }) %>
                        </select>

                        <label for="inv_make">Make:</label>
                        <input type="text" name="inv_make" id="inv_make" value="<%= itemData.inv_make %>" required>

                        <label for="inv_model">Model:</label>
                        <input type="text" name="inv_model" id="inv_model" value="<%= itemData.inv_model %>" required>

                        <label for="inv_year">Year:</label>
                        <input type="number" name="inv_year" id="inv_year" value="<%= itemData.inv_year %>" required>

                        <label for="inv_color">Color:</label>
                        <input type="text" name="inv_color" id="inv_color" value="<%= itemData.inv_color %>" required>

                        <label for="inv_description">Description:</label>
                        <textarea name="inv_description" id="inv_description"
                            required><%= itemData.inv_description %></textarea>

                        <label for="inv_image">Image Path:</label>
                        <input type="text" name="inv_image" id="inv_image" value="<%= itemData.inv_image %>" required>

                        <label for="inv_thumbnail">Thumbnail Path:</label>
                        <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%= itemData.inv_thumbnail %>"
                            required>

                        <label for="inv_price">Price (â‚¦):</label>
                        <input type="number" name="inv_price" id="inv_price" step="0.01"
                            value="<%= itemData.inv_price %>" required>

                        <label for="inv_miles">Miles:</label>
                        <input type="number" name="inv_miles" id="inv_miles" value="<%= itemData.inv_miles %>" required>

                        <button type="submit">Update Vehicle</button>
                    </form>
                </main>

    </body>

</html>