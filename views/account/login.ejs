
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | CSE Motors</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <main>
        <div class="form-container">

            <% if (messages && messages.length> 0) { %>
                <div class="flash-message success">
                    <% messages.forEach(msg=> { %>
                        <p>
                            <%= msg %>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <h1>Login to Your Account</h1>
                    <form action="/account/login" method="POST">

                        <label for="account_email">Email:</label>
                        <input type="email" id="account_email" name="account_email" required>

                        <label for="account_password">Password:</label>
                        <div class="password-wrapper">
                            <input type="password" id="account_password" name="account_password" required
                                placeholder="Min 6 chars, 1 capital, 1 number, 1 special"
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{6,}$">
                            <button type="button" class="toggle-password">Show</button>
                        </div>

                        <p class="password-rules">
                            <strong><em>
                                    Passwords must be at least 12 characters long and contain at least:<br>
                                    1 uppercase letter<br>
                                    1 number<br>
                                    1 special character
                                </em></strong>
                        </p>

                        <button type="submit" class="login-btn">Login</button>

                        <!-- ðŸ‘‡ Added Register Link -->
                        <p class="register-link">
                            Donâ€™t have an account?
                            <a href="/account/register">Register here</a>
                        </p>
                    </form>
        </div>
    </main>

</body>

</html>