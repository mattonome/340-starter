<body>
    <main class="account-management">
        <h1>
            <%= title %>
        </h1>

        <section class="account-info">
            <!-- Greet user -->
            <h2>Welcome, <%= accountData.account_firstname %>
                    <%= accountData.account_lastname %>!</h2>

            <p><strong>Email:</strong>
                <%= accountData.account_email %>
            </p>
            <p><strong>Account Type:</strong>
                <%= accountData.account_type %>
            </p>

            <!-- Actions -->
            <div class="actions">
                <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
                    <h3>Inventory Management</h3>
                    <p>
                        <a href="/inv/management" class="btn">Manage Inventory</a>
                    </p>
                    <% } %>

                        <!-- Update account link (always shown) -->
                        <p>
                            <a href="/account/update/<%= accountData.account_id %>" class="btn">Update Account Info</a>
                        </p>

                        <!-- Logout link (always shown) -->
                        <p>
                            <a href="/account/logout" class="btn btn-logout">Logout</a>
                        </p>
            </div>
        </section>
    </main>
</body>

</html>